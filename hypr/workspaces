bind = $mainMod, END, workspace, 2
bind = $mainMod, INSERT, workspace, 3
bind = $mainMod, DELETE, workspace, 4
bind = $CTRL, HOME, workspace, 5
bind = $CTRL, END, workspace, 6
bind = $CTRL, INSERT, workspace, 7
bind = $CTRL, DELETE, workspace, 8
bind = $CTRL, 9, workspace, 9
bind = $CTRL, 0, workspace, 0
bind = $mainMod, 0, workspace, e

bind = $mainMod SHIFT, HOME, movetoworkspace, 1
bind = $mainMod SHIFT, END, movetoworkspace, 2
bind = $mainMod SHIFT, INSERT, movetoworkspace, 3
bind = $CTRL SHIFT, DELETE, movetoworkspace, 8
bind = $CTRL SHIFT, HOME, movetoworkspace, 5
bind = $CTRL SHIFT, END, movetoworkspace, 6
bind = $CTRL SHIFT, INSERT, movetoworkspace, 7
bind = $CTRL SHIFT, DELETE, movetoworkspace, 8
bind = $CTRL SHIFT, 9, movetoworkspace, 9
bind = $CTRL SHIFT, 0, movetoworkspace, 10

